<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.integration.entity.User" table="USERSTU">
        <id name="id" type="java.lang.Integer">
            <column name="ID" precision="22" scale="0" />
            <generator class="sequence">      
                <param name="sequence">FUSER_ID_SEQ</param>      
            </generator> 
        </id>
        <property name="username" type="java.lang.String">
            <column name="USERNAME" length="20" not-null="false">
                <comment>用户名</comment>
            </column>
        </property>
        <property name="password" type="java.lang.String">
            <column name="PASSWORD" length="20" not-null="false">
                <comment>密码</comment>
            </column>
        </property>
        <property name="role" type="java.lang.String">
            <column name="ROLE" length="50" not-null="false">
                <comment>角色</comment>
            </column>
        </property>
        <property name="showname" type="java.lang.String">
            <column name="SHOWNAME" length="50" not-null="false">
                <comment>角色</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
